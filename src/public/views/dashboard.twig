<!doctype html>
<html>
<head>
  <meta charset="utf-8"/>
  <title>Wellness Dashboard</title>
  <meta name="viewport" content="width=device-width, initial-scale=1"/>
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"/>
</head>
<body class="p-4">
  <div class="container">
    <h1 class="mb-4">Wellness Dashboard</h1>
    <p class="text-muted">Sample line chart using data from <code>/api/measurements</code>.</p>
    <canvas id="chart"></canvas>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
  <script>
    (async () => {
      const res = await fetch('/api/measurements');
      const rows = await res.json();

      // Demo: filter only "weight"
      const weight = rows.filter(r => r.type === 'weight').reverse();
      const labels = weight.map(r => r.measuredAt);
      const values = weight.map(r => r.value);

      new Chart(document.getElementById('chart'), {
        type: 'line',
        data: {
          labels,
          datasets: [{ label: 'Weight', data: values }]
        }
      });
    })();
  </script>
</body>
</html>
